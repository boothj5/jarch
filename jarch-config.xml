<jarch-config>

    <base-path>uk.co.corelogic.mosaic</base-path>

    <layer-spec name="spring">
        <layer name="controller">
            <dependency on="facade"/>
            <dependency on="domain"/>
            <dependency on="enumeration"/>
        </layer>
        <layer name="facade">
            <dependency on="service"/>
            <dependency on="domain"/>
            <dependency on="enumeration"/>
        </layer>
        <layer name="service">
            <dependency on="repository"/>
            <dependency on="domain"/>
            <dependency on="enumeration"/>
        </layer>
        <layer name="repository">
            <dependency on="dao"/>
            <dependency on="domain"/>
            <dependency on="enumeration"/>
            <dependency on="dto"/>
        </layer>
        <layer name="dao">
            <dependency on="dto"/>
            <dependency on="enumeration"/>
        </layer>
        <layer name="domain">
            <dependency on="dto"/>
            <dependency on="enumeration"/>
        </layer>
        <layer name="dto">
            <dependency on="enumeration"/>
        </layer>
        <layer name="enumeration"/>
    </layer-spec>

    <module name="common"/>

    <module name="configuration" layer-spec="spring">
        <dependency on="common"/>
    </module>

    <module name="address" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
    </module>
    
    <module name="form" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
        <dependency on="organisation"/>
        <dependency on="telephonenumber"/>
        <dependency on="address"/>
        <dependency on="worker"/>
        <dependency on="person"/>
        <dependency on="subject"/>
        <dependency on="script"/>
    </module>
    
    <module name="group" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
        <dependency on="subject"/>
    </module>

    <module name="organisation" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
        <dependency on="person"/>
        <dependency on="address"/>
    </module>

    <module name="permissions" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
        <dependency on="worker"/>
        <dependency on="workflow"/>
    </module>

    <module name="person" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
        <dependency on="address"/>
        <dependency on="organisation"/>
    </module>

    <module name="script" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
        <dependency on="form"/>
    </module>

    <module name="subject" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
    </module>

    <module name="telephonenumber" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
    </module>

    <module name="worker" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
    </module>

    <module name="workflow" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
        <dependency on="form"/>
        <dependency on="subject"/>
        <dependency on="group"/>
        <dependency on="permissions"/>
    </module>

    <module name="workview" layer-spec="spring">
        <dependency on="common"/>
        <dependency on="configuration"/>
        <dependency on="worker"/>
        <dependency on="workflow"/>    
    </module>
            
</jarch-config>
